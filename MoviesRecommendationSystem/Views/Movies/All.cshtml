@model AllMoviesQueryModel

@{
    ViewBag.Title = "Collection";
}

<form method="get">
    <div class="row" mb-5>
        <div class="form-group col-md-4">
            <select asp-for="SelectedGenre" class="form-control">
                <option value="">All Genres</option>
                @foreach (var genre in Model.Genres)
                {
                    <option value="@genre">@genre</option>
                }
            </select>
        </div>
        <div class="form-group col-md-4">
            <select asp-for="Sorting" class="form-control">
                <option value="0" selected>Date of addition</option>
                <option value="1">Year of Release (desc.)</option>
                <option value="2">Year of Release (asc.)</option>
            </select>
        </div>
        <div class="input-group col-md-4">
            <input asp-for="SearchTerm" class="form-control">
        </div>
    </div>
</form>

<form method="get">
    <div class="row" id="genre-selector">
        <a class="genre-selector" href="/Movies/All">All</a>
        @foreach (var genre in Model.Genres)
        {
            <a href="?SelectedGenre=@genre">@genre</a>     
        }
    </div>
</form>

<partial name="_MoviesPartial" model="@Model.Movies" />

@{
    var previousPage = Model.CurrentPage - 1;
    var nextPage = Model.CurrentPage + 1;

    if (previousPage < 1)
    {
        previousPage = 1;
    }

    bool hasNextPage = Model.CurrentPage * AllMoviesQueryModel.MoviesPerPage < Model.TotalMoviesCount;
}

<div class="row">
    @if (Model.CurrentPage > 1)
    {
        <div class="pagination">
            <a class="btn-transparent" 
               asp-controller="Movies" 
               asp-action="All" 
               asp-route-currentPage="@previousPage"
               asp-route-selectedGenre="@Model.SelectedGenre"
               asp-route-sorting="@((int)Model.Sorting)"
               asp-route-searchTerm="@Model.SearchTerm">
                Previous
            </a>
        </div>
    }
    @if (hasNextPage)
    {
        <div class="pagination">
            <a class="btn-transparent" 
               asp-controller="Movies" 
               asp-action="All" 
               asp-route-currentPage="@nextPage"
               asp-route-selectedGenre="@Model.SelectedGenre"
               asp-route-sorting="@((int)Model.Sorting)"
               asp-route-searchTerm="@Model.SearchTerm">
                Next
            </a>
        </div>
    }
</div>


