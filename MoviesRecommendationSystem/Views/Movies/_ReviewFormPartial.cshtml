@model AddReviewFormModel

<form method="post" asp-controller="Reviews" asp-action="Add">
    <div class="review-form">
        @*<h3>
            <span>
                Your review
            </span>
        </h3>*@
        <div class="position-relative">
            <div class="form-group star-rating col-1 ml-2">
                @for (int i = 5; i >= 1; i--)
                {
                    <input asp-for="Rating" type="radio" name="rating" value="@(i)" id="star-@i"><label class="star-radio" asp-for="Rating" for="star-@i">☆</label>
                }
                <span asp-validation-for="Rating" class="small text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <textarea asp-for="Content" class="form-control" rows="3"></textarea>
            <span asp-validation-for="Content" class="small text-danger"></span>
        </div>
        <div hidden class="form-group hidden">
            <input asp-for="MovieId" value="@Model.MovieId" />
        </div>
        <button type="submit" class="btn-watch">Submit</button>
    </div>
</form>
    