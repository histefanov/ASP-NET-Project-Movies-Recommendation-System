@model BecomeEditorFormModel

@{
    ViewBag.Title = "Become Editor";
    string dateNow = DateTime.Now.ToString("yyyy-MM-dd");
}
<h1 id="become-editor-title">@ViewBag.Title</h1>

<div class="become-editor">
    <hr />
    <div class="register-fields">
        <form method="post">
            <div class="form-group">
                <label asp-for="FirstName"></label>
                <input asp-for="FirstName" class="form-control">
                <span asp-validation-for="FirstName" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName"></label>
                <input asp-for="LastName" class="form-control">
                <span asp-validation-for="LastName" class="small text-danger"></span>
            </div>
            <div class="form-group mt-5">
                <label asp-for="BirthDate"></label>
                <input asp-for="BirthDate" type="date" id="date-picker" value="@dateNow" min="1900-01-01" max="@dateNow">
                <span asp-validation-for="BirthDate" class="small text-danger"></span>
            </div>
            <div class="form-group text-center m-5">
                <button type="submit" class="btn-general">Submit</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />   
}


