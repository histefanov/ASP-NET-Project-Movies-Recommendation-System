@using Microsoft.AspNetCore.Identity
@using MoviesRecommendationSystem.Data.Models
@using MoviesRecommendationSystem.Services.Editors

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager
@inject IEditorsService Editors

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        var userIsEditor = Editors.UserIsEditor(User.GetId());

        if (userIsEditor)
        {
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Movies" asp-action="EditorContributions">Contributions</a>
            </li>
        }
        else
        {
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Editors" asp-action="Create">Become Editor</a>
            </li>
        }

        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Profile</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }
</ul>
