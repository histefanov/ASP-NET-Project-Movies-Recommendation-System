@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1 id="register-title">@ViewData["Title"]</h1>

<div class="register">
    <hr />
    <div class="register-fields">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div class="form-group">
                <label class="label-register" asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="register-validation text-danger"></span>
            </div>
            <div class="form-group">
                <label class="label-register" asp-for="Input.Name"></label>
                <input asp-for="Input.Name" class="form-control" />
                <span asp-validation-for="Input.Name" class="register-validation text-danger"></span>
            </div>
            <div class="form-group">
                <label class="label-register" asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="register-validation text-danger"></span>
            </div>
            <div class="form-group">
                <label class="label-register" asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="register-validation text-danger"></span>
            </div>
            <div class="form-group text-center" id="div-btn-register">
                <button type="submit" class="btn-general">Register</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
